<Page
    x:Class="wpfChat.Views.Pages.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpfChat.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:wpfChat.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ChatPage"
    d:DataContext="{d:DesignInstance local:ChatPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ui:Button
                x:Name="ReloadModel"
                Margin="0,0,10,0"
                Command="{Binding ViewModel.ReloadModelCommand , Mode=OneWay}"
                Content="{Binding ViewModel.ReloadBtn , Mode=OneWay}"
                Appearance="Secondary" />
            <TextBlock
                x:Name="TitleModelPath"
                Margin="0"
                Grid.Row="0"
                VerticalAlignment="Center"
                Text="{Binding ViewModel.ModelPath, Mode=OneWay}" />
        </StackPanel>        
        <RichTextBox x:Name="DisplayTextBox" Margin="0,10,0,10" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SendTextBox" Margin="0,10,0,10" Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ui:Button 
                    x:Name="Attachment" 
                    Margin="10,10,0,10"
                    Grid.Row="2"
                    Command="{Binding ViewModel.PickAttachCommand , Mode=OneWay}"
                    ToolTipService.ToolTip="pdf,docx,txt,md"
                    Appearance="Secondary" />
            </Grid>
            <ui:Button x:Name="SendBtn" IsEnabled="{Binding ViewModel.IsModelReady, Mode=OneWay}" Margin="10,10,0,10" Width="130" Click="SendBtn_Click" Content="{Binding ViewModel.ButtonText, Mode=OneWay}" Grid.Column="2" Appearance="Primary" VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Page>
